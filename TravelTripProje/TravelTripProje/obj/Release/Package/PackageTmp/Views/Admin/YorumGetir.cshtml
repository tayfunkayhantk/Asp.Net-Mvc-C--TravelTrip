@model TravelTripProje.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumGetir</h2>
<br />
@using (Html.BeginForm("YorumGuncelle","Admin",FormMethod.Post))
            {
<form class="form-group" method="post">
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = ("readonly") })
    <br />
    @Html.LabelFor(x => x.KullaniciAdi)
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @readonly = ("readonly") })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = ("readonly") })
    <br />
    @Html.LabelFor(x => x.Blog.Baslik)
    @Html.TextBoxFor(x => x.Blog.Baslik, new { @class = "form-control", @readonly = ("readonly") })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextBoxFor(x => x.Yorum, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Düzenle</button>
</form>
            }

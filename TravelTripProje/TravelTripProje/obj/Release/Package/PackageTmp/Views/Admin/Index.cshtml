@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID"class="btn btn-danger">Sil </a></td>
            <td><a href="/Admin/BlogGetir/@x.ID"class="btn btn-success">Güncelle </a></td>
            <td><a href="/Blog/BlogIç/@x.ID"class="btn btn-warning">Blog Detay </a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/YeniBlog/Index/"class="btn btn-primary">Yeni Blog</a>

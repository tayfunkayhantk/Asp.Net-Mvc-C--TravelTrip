@model TravelTripProje.Models.Siniflar.Iletisim
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_TestLayaut.cshtml";
}

<div class="contact">
    <div class="wrap">
        <div class="contact-top">
            <h3>İletişim Sayfası</h3>
            <p> Dilek ve Şikayetleriniz İçin Lütfen Bize Yazın.</p>
        </div>
        <div class="form">
            <form class="cmxform" id="contactForm" method="post">
                <div>
                    <input type="text" class="textbox" name="AdSoyad" value="isim:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'İsim';}">
                </div>
                <div>
                    <input type="text" class="textbox" name="Mail" value="E-posta:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-Posta';}">
                </div>
                <div>
                    <input type="text" class="textbox" name="Telefon" value="Telefon:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Telefon';}">
                </div>

                <div>
                    <input  type="submit" value="Gönder" />
                </div>
                <div class="form1">
                
                        <div>
                            <textarea placeholder="Mesaj:" class="textbox" name="Mesaj"></textarea>
                        </div>
                   
                </div>
            </form>
        </div>
        <div class="clear"></div>
    </div>
</div>

